// https://developers.braintreepayments.com/javascript+ruby/guides/drop-in
- payment_method.provider # Braintree::Configuration is lazily initialized, this sets it up so we can generate a client token.

form.well.clearfix [
  method='post'
  action='/checkout']

  #hosted-ccd-form

  input.btn.btn-lrg.btn-success type="submit" value="Verify"

script src="https://js.braintreegateway.com/v2/braintree.js"
script
  /We generated a client token for you so you can test out this code
  /immediately. In a production-ready integration, you will need to
  /generate a client token on your server (see section below).
  /var clientToken = ""
  |
    braintree.clientToken = "#{Braintree::ClientToken.generate}"

    braintree.setup(braintree.clientToken, "dropin", {
      container: "hosted-ccd-form",
      paypal: {
        singleUse: true,
        amount: #{@order.total.to_f},
        // TODO Spree current currency
        currency: '#{@order.currency}'
      },
      onPaymentMethodReceived: function (obj) {
        // Do some logic in here.
        // When you're ready to submit the form:
        myForm.submit();
      }
    });

